<!--pages/index/index.wxml-->
<view class="indexCon">
  <!-- <text>欢迎来到小茶楼</text> -->
  <view>
    <image class="img" src='{{index_img}}'></image>
  </view>

  <form bindsubmit="formSubmit">
    <view class="section">
      <view>手机号：</view>
      <input name="iphone" placeholder="手机号" />
    </view>

    <view class="section">
      <view>密码：</view>
      <input name="pwd" placeholder="密码" password/>
    </view>

    <view>
      <button form-type="submit" class="section_login">登录小茶楼</button>
    </view>
  </form>

  <view>
    <navigator url="/pages/alter/alter" class="text_register">忘记密码/修改密码</navigator>
  </view>

  <view>
    <navigator url="/pages/register/register" class="text_register">立即注册</navigator>
  </view>

</view>